<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="LIN.Controls.UI.InputImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Custom="clr-namespace:LIN.Controls.UI">

    <!--  Contenido  -->
    <Grid>

        <Custom:Border
            Grid.Row="0"
            BackgroundColor="#EBEBEB"
            Clicked="LoadImageEvent"
            StrokeShape="RoundRectangle 7"
            StrokeThickness="0" />

        <StackLayout
            Grid.Row="0"
            Padding="10"
            Orientation="Horizontal">

            <Custom:Image
                x:Name="picture"
                Margin="1"
                Aspect="AspectFit"
                Clicked="LoadImageEvent"
                HeightRequest="20"
                Source="montana.png"
                VerticalOptions="Center"
                WidthRequest="20" />

            <Custom:Label
                x:Name="lb"
                Margin="10,0,0,0"
                Clicked="LoadImageEvent"
                FontFamily="QSM"
                FontSize="12"
                Text="Elegir imagen"
                VerticalOptions="Center" />


        </StackLayout>
    </Grid>

</Grid>
