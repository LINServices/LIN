@page "/members/{Id}"


@* Pantalla *@
<div class="flex flex-grow flex-col w-full h-full overflow-hidden px-4 lg:px-6">

    @* Header. *@
    <LIN.Components.Layout.Header Tittle="Configuración" GoBack="true" />


    @* Header. *@
    <div class="mt-1">

        @* Cartas. *@
        <div class="mt-3">
            <div class="flex flex-col justify-center py-4">

                <div class="flex items-center justify-center flex-col w-full">

                    <div class="w-full">
                        <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nombre</label>
                        <input @bind=Name type="text" id="small-input" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100">
                    </div>

                    <div class="w-full mt-3.5">
                        <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Descripción</label>
                        <input @bind=Description type="text" id="small-input" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100">
                    </div>

                </div>

            </div>
        </div>


        @* Total de resultados. *@
        <label class="text-zinc-400 text-sm">Se encontraron @(Response?.Models.Count ?? 0) resultados</label>

    </div>


    @* Componentes. *@
    <div class="flex-1 overflow-auto gap-2 UIScroll">


        @* Cargando *@
        @if (Response == null || IsLoading)
        {
            <div class="w-full flex items-center justify-center">
                <Loader />
            </div>
        }

        @* Render *@
        else
        {
            switch (Response.Response)
            {

                @* Correctamente *@
                case Responses.Success:
                    {

                        @* No hay elementos *@
                        @if (Response.Models.Count <= 0)
                        {
                            <div class="flex rounded-lg justify-center items-center border-dashed border-2 border-zinc-300 w-full py-7 mt-3 dark:border-gray-400">
                                <label class="text-zinc-400 dark:text-gray-200">No tienes ningún producto</label>
                            </div>
                        }

                        @* Renderizar componentes *@
                        else
                        {
                            @foreach (var e in Response.Models ?? [])
                            {
                                <div class="flex items-center bg-white shadow-sm rounded-lg p-3 dark:bg-zinc-900">

                                    <div class="h-10 w-10 p-2  ring-1 ring-zinc-300 bg-ring-100 dark:ring-zinc-600 rounded-full">
                                        <img class="h-full w-full" src="./img/inventory.png" />
                                    </div>

                                    <div class="flex flex-col ml-2">
                                        <label class="font-bold text-sm text-zinc-700 dark:text-zinc-300">@e.Nombre</label>
                                        <label class="text-xs -mt-1 text-zinc-600 dark:text-zinc-400">@e.Usuario.ToString()</label>
                                    </div>

                                </div>
                            }
                        }
                        break;
                    }

                @* Otros *@
                default:
                    {
                        <div class="flex rounded-lg justify-center items-center border-dashed border-2 border-zinc-300 w-full py-7 mt-3 dark:border-gray-400">
                            <label class="text-zinc-400 dark:text-gray-200">Error al obtener los productos</label>
                        </div>
                        break;
                    }

            }

        }

    </div>


</div>