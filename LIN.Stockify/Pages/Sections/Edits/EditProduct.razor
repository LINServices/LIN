@page "/edit/product/{Id}"
@inject IJSRuntime JS
@inject NavigationManager nav


<div class="flex flex-grow flex-col w-full h-full overflow-hidden px-4 lg:px-6 items-center">


    <LIN.Components.Layout.Header Tittle="Editar producto" GoBack="true" />

    <div class="flex flex-grow flex-col h-full w-full max-w-lg overflow-hidden px-1">


        @if (Section == 0)
        {

            @* Componentes. *@
            <div class="flex-1 overflow-y-auto gap-3 mt-4 dl:mt-2 p-0.5 UIScroll">


                <div class="w-full">
                    <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nombre</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z" />

                            </svg>
                        </div>
                        <input @bind="Product.Name" type="text" id="zip-input" aria-describedby="helper-text-explanation" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 ps-10 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100" required>
                    </div>
                </div>

                <div class="w-full mt-3.5">
                    <label for="small" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Categoría</label>
                    <select @bind="Category" id="small" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 p-2 text-gray-900 placeholder-zinc-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100">
                        <option selected value="0">Selecciona una categoría</option>
                        <option value="1">Tecnología</option>
                        <option value="2">Deporte</option>
                        <option value="3">Moda</option>
                        <option value="4">Salud</option>
                        <option value="5">Alimentos</option>
                        <option value="6">Limpieza</option>
                        <option value="7">Servicios</option>
                        <option value="8">Hogar</option>
                        <option value="9">Juguetes</option>
                        <option value="10">Agricultura</option>
                        <option value="11">Automóviles</option>
                        <option value="12">Animales</option>
                        <option value="13">Frutas</option>
                        <option value="14">Arte</option>
                    </select>
                </div>



                <div class="w-full mt-3.5">
                    <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Código</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M3 4.5a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0zm2 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0zm2 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0zm2 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0z" />
                            </svg>
                        </div>
                        <input @bind="Product.Code" type="text" id="zip-input" aria-describedby="helper-text-explanation" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 ps-10 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100"  required>
                    </div>
                </div>

                <div class="flex w-full mt-3.5 gap-3">
                    <div class="w-full">
                        <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Compra</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                    <path d="M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2z" />
                                </svg>
                            </div>
                            <input @bind="Product.DetailModel.PrecioCompra" type="number" id="zip-input" aria-describedby="helper-text-explanation" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 ps-10 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100" placeholder="Precio de compra" required>
                        </div>
                    </div>
                    <div class="w-full">
                        <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Venta</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                </svg>
                            </div>
                            <input @bind="Product.DetailModel.PrecioVenta" type="number" id="zip-input" aria-describedby="helper-text-explanation" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 ps-10 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100" placeholder="Precio de venta" required>
                        </div>
                    </div>
                </div>

                <div class="w-full mt-3.5">
                    <label for="small-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Descripción</label>
                    <textarea @bind="Product.Description" id="campoInput" rows="4" class="block w-full appearance-none rounded-md border border-gray-200 bg-gray-50 p-2 text-gray-900 placeholder-gray-400 focus:border-current-500 focus:bg-white focus:outline-none focus:ring-current-500 sm:text-xs dark:bg-zinc-900 focus:dark:bg-[#323232] dark:border-zinc-700 dark:text-gray-100" ></textarea>
                </div>

            </div>


            <div class="flex w-full self-end mt-2 items-end justify-center">
               
            </div>


        }
        else if (Section == 1)
        {
            <div class="flex items-center h-full justify-center">
                <Success></Success>
            </div>
        }

        else if (Section == 2)
        {
            <div class="flex flex-col items-center h-full justify-center">

                <Failure />

                <label class="font-bold dark:text-zinc-200">Hubo un error al crear el producto</label>
                <label class="font-bold text-red-500 dark:text-red-400 mt-1">Volver</label>
            </div>
        }

        else if (Section == 3)
        {
            <div class="flex items-center h-full justify-center">
                <Loader></Loader>
            </div>
        }


    </div>
</div>
