@inject IJSRuntime Js


<!-- Small Modal -->
<div id="small-modal-member" tabindex="-1" class="h-[calc(100%-1rem)] fixed left-0 right-0 top-0 z-50 hidden max-h-full w-full overflow-y-auto overflow-x-hidden p-4 md:inset-0">
    <div class="relative max-h-full w-full max-w-md">

        <!-- Modal content -->
        <div class="relative rounded-xl bg-white p-4 shadow dark:bg-zinc-900">

            <!-- Modal header -->
            <div class="flex items-center justify-between rounded-t dark:border-gray-600">
                <button id="closeee-member" type="button" class="ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg bg-transparent text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="small-modal">
                    <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <div class="-mt-8 p-4 md:p-5">

                <div class="flex w-full flex-col items-center justify-center">



                    <div class="relative inline-flex h-16 w-16 items-center justify-center overflow-hidden rounded-full bg-gray-100 dark:bg-zinc-700">
                        <span class="font-medium text-gray-600 dark:text-gray-300">@Global.Utilities.Strings.GetInitials(Model?.Nombre ?? "")</span>
                    </div>




                    <label class="mt-1 text-xl font-bold text-zinc-900 dark:text-zinc-200">@(Model?.Nombre ?? "Unnamed")</label>


                    <select @bind="Type" @oninput="Change" id="small" class="mx-5 mb-6 mt-4 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2 text-sm text-gray-900 outline-none focus:ring-current-500 focus:border-current-500 dark:bg-zinc-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-current-500 dark:focus:border-current-500">
                        <option value="0">Sin rol</option>
                        <option value="1">Administrador</option>
                        <option value="2">Supervisor</option>
                        <option value="3">Integrante</option>
                        <option value="4">Invitado</option>
                        <option value="5">Lector</option>
                    </select>


                    <button @onclick="Delete" type="button" class="flex w-full items-center justify-center rounded-xl bg-red-500 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800">
                        Eliminar
                    </button>



                </div>


            </div>






        </div>

    </div>
</div>