@code{
   

   

    static List<SalesModel>? Sales = null;


    public async void GetData()
    {

        if (Sales != null)
        {
            Render();
            return;
        }

        var session = LIN.Access.Inventory.Session.Instance;
        var sales = await LIN.Access.Inventory.Controllers.Outflows.Sales(session.Informacion.ID, 7);

        Sales = sales.Models;
        Render();
    }


    public void Render()
    {
         js.InvokeVoidAsync("CharLoad", Sales?.Select(t => t.Date.ToString()), Sales?.Select(t => t.Money));
    }


               }