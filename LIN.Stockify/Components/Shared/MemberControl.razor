
<div @onclick="SendEvent" class="flex items-center shadow-sm bg-white rounded-lg p-3 dark:bg-zinc-900 mt-2 justify-between">

    <div class="flex items-center">
        <div class="flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-zinc-800">
            <span class="font-medium text-gray-600 dark:text-gray-300">@Global.Utilities.Strings.GetInitials(Model.Nombre ?? "")</span>
        </div>

        <div class="flex flex-col ml-2">
            <label class="font-bold text-sm text-zinc-700 dark:text-zinc-300">@(Model.Nombre ?? "Sin nombre")</label>
            <label class="text-xs -mt-1 text-zinc-600 dark:text-zinc-400">@(Model.Usuario ?? "Sin usuario")</label>
        </div>
    </div>
    <div class="flex">
        @if (State)
        {

            <span class="flex items-center bg-zinc-100 text-gray-800 text-xs font-medium  px-3 py-1 rounded-2xl dark:bg-zinc-500/20 dark:text-gray-400 border border-gray-500">
                <span class="inline-flex items-center justify-center w-3 h-3 text-sm font-semibold text-gray-800  rounded-full  dark:text-gray-300 mr-2">
                    <svg class="w-full h-full" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z" />
                    </svg>
                    <span class="sr-only">Icon description</span>
                </span>
                @Model.Rol
            </span>

        }
        else
        {
            <span class=" text-yellow-800 text-xs font-medium me-2 px-3 py-1 rounded-2xl dark:text-yellow-300 border border-yellow-300">No invitado</span>
        }

    </div>

</div>