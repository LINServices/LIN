
<div @onclick="SendEvent" class="flex items-center shadow-sm bg-white rounded-lg p-3 dark:bg-zinc-900 mt-2 @(State?"ring-2 ring-current-500":"") ">

    <div class="relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-zinc-800">
        <span class="font-medium text-gray-600 dark:text-gray-300">@Global.Utilities.Strings.GetInitials(Model.Account.Name ?? "")</span>
    </div>

    <div class="flex flex-col ml-2">
        <label class="font-bold text-sm text-zinc-700 dark:text-zinc-300">@(Model.Account.Name ?? "Sin nombre")</label>
        <label class="text-xs -mt-1 text-zinc-600 dark:text-zinc-400">@(Model.Account.Identity.Unique ?? "Sin tipo")</label>
    </div>

</div>