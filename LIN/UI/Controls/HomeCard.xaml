<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="LIN.UI.Controls.HomeCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">



    <Grid>
        <Grid.Shadow>
            <Shadow Brush="{Binding Source={x:Reference this}, Path=ShadowColor}" Opacity="0.05" />
        </Grid.Shadow>


        <!--  Fondo (Border)  -->
        <Border
            Background="{Binding Source={x:Reference this}, Path=BaseColor}"
            StrokeShape="RoundRectangle 8"
            StrokeThickness="0" />


        <VerticalStackLayout Padding="12" VerticalOptions="Center">
            <Label FontFamily="QSB" Text="{Binding Source={x:Reference this}, Path=Title}" />
            <Label
                Grid.Row="1"
                Margin="0,2,0,0"
                FontFamily="QSM"
                FontSize="12"
                Text="{Binding Source={x:Reference this}, Path=SubTitle}" />
        </VerticalStackLayout>



    </Grid>












</ContentView>
