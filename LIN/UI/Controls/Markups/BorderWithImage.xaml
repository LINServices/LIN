<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="LIN.UI.Controls.Markups.BorderWithImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">


    <Grid>

        <Border
            Grid.Row="0"
            BackgroundColor="{StaticResource Gray100}"
            HorizontalOptions="FillAndExpand"
            StrokeShape="RoundRectangle 7"
            StrokeThickness="0" />

        <StackLayout
            Grid.Row="0"
            Padding="5"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal">

            <Image
                Margin="4,0,0,0"
                HeightRequest="13"
                Source="{Binding Source={x:Reference this}, Path=Imagen}"
                WidthRequest="13" />

            <VerticalStackLayout Margin="7,0,0,0">
                <Label
                    FontFamily="QSB"
                    FontSize="13"
                    Text="{Binding Source={x:Reference this}, Path=Titulo}" />
                <Label
                    Margin="0,-2,0,0"
                    FontFamily="QSM"
                    FontSize="10"
                    Text="{Binding Source={x:Reference this}, Path=SubTitulo}"
                    TextColor="{StaticResource Gray600}" />
            </VerticalStackLayout>

        </StackLayout>

    </Grid>


</ContentView>
